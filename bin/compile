#!/bin/bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

RELEASE="$1"
VERSION="$2"

if [ "stable" == "${RELEASE}" ]; then
    VERSION=`git log --pretty="%H" -n1 HEAD`
fi

echo "$RELEASE-$VERSION"

sed -i s/RELEASE-VERSION/$RELEASE-$VERSION/g $DIR/../config/app.php

./mysql-helper app:build

sed -i s/$RELEASE-$VERSION/RELEASE-VERSION/g $DIR/../config/app.php
